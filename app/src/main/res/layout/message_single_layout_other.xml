<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_single_layout_other"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:weightSum="10">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_layout_other"
        android:layout_alignParentRight="true"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_weight="0"
        android:src="@drawable/default_avata" />

    <TextView
        android:id="@+id/message_text_layout_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@+id/name_text_layout_other"
        android:layout_marginLeft="10dp"
        android:layout_toStartOf="@+id/message_profile_layout_other"
        android:layout_toLeftOf="@id/message_profile_layout_other"
        android:text="Message Text"
        android:textColor="#444444"
        android:textSize="14sp"
        android:clickable="true"
        />



    <TextView
        android:id="@+id/name_text_layout_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toStartOf="@+id/message_profile_layout_other"
        android:layout_toLeftOf="@id/message_profile_layout_other"
        android:text="Display Name"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/time_text_layout_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_toStartOf="@+id/name_text_layout_other"
        android:layout_toLeftOf="@id/name_text_layout_other"
        android:text="00:00"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/message_image_layout_other"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_below="@+id/message_text_layout_other"
        android:layout_marginLeft="0dp"
        android:layout_toStartOf="@+id/message_profile_layout_other"
        android:layout_toLeftOf="@id/message_profile_layout_other"
        android:padding="0dp"
        android:scaleType="centerCrop" />
</RelativeLayout>